<div class="container">

  <div class="text-center m-5">
    <hr />
    <h1>{{Titulo}}</h1>
    <hr />
  </div>
  <div class="row">
    <form action="./contacto" method="post">
      <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Nombre</label>
        <input
          type="text"
          class="form-control"
          name="nombre"
          placeholder="Nombre"
        />
      </div>
      <div class="mb-3">
        <label
          for="exampleFormControlInput1"
          class="form-label"
        >Apellido</label>
        <input
          type="text"
          class="form-control"
          name="apellido"
          placeholder="Apellido"
        />
      </div>
      <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Mail</label>
        <input
          type="text"
          class="form-control"
          name="mail"
          placeholder="Mail"
        />
      </div>
      <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">Dejanos tu
          comentario</label>
        <textarea class="form-control" name="comentario" rows="3"></textarea>
      </div>
      <div class="mb-3 text-center">
        <input
          type="submit"
          class="button btn-primary w-50 p-2"
          value="Enviar formulario"
        />
      </div>
    </form>
    <div class="text-center validation">
      <h2 class="text-danger">
        {{validacion}}
      </h2>
    </div>
  </div>
</div>

<div
  style="position:fixed; right:20px; bottom:20px; text-align:center; padding:20px"
>
  <a href="https://api.whatsapp.com/send?phone=+2255626262">
    <img
      src="https://upload.wikimedia.org/wikipedia/commons/thumb/6/6b/WhatsApp.svg/240px-WhatsApp.svg.png"
      width="70"
      height="70"
    /></a>
</div>